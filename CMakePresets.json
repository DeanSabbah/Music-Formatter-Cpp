{
  "version": 3,
  "configurePresets": [
    {
      "name": "base-config",
      "generator": "Ninja",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_MANIFEST_MODE": "ON",
        "VCPKG_APPLOCAL_DEPS": "ON"
      }
    },
    {
      "name": "linux-debug",
      "inherits": "base-config",
      "displayName": "Linux (debug)",
      "description": "Native Linux build (uses vcpkg manifest, linux triplet)",
      "binaryDir": "${sourceDir}/build/linux/debug",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux-dynamic"
      }
    },
    {
      "name": "linux-release",
      "inherits": "linux-debug",
      "displayName": "Linux (release)",
      "description": "Native Linux build (uses vcpkg manifest, linux triplet)",
      "binaryDir": "${sourceDir}/build/linux/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-debug",
      "inherits": "base-config",
      "displayName": "Windows (debug)",
      "description": "Cross-compile for Windows using vcpkg toolchain + TC-mingw.cmake",
      "binaryDir": "${sourceDir}/build/windows/debug",
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/TC-mingw.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "windows-release",
      "inherits": "windows-debug",
      "displayName": "Windows (release)",
      "description": "Cross-compile for Windows using vcpkg toolchain + TC-mingw.cmake",
      "binaryDir": "${sourceDir}/build/windows/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}