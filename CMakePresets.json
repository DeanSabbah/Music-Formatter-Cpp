{
  "version": 2,
  "configurePresets": [
    {
      "name": "vcpkg",
      "displayName": "Configure with vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/vcpkg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vcpkg",
      "configurePreset": "vcpkg",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "vcpkg",
      "configurePreset": "vcpkg"
    }
  ]
}